<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SNKRS" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_magenta</item>
        <item name="colorSecondaryVariant">@color/primary_purple</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorPrimaryVariant">@color/seafoam_secondary</item>
        <item name="colorSecondary">@color/green_primary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.SNKRS.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:ambientShadowAlpha">0.1</item>
        <item name="android:spotShadowAlpha">0.5</item>
    </style>

    <style name="Theme.SNKRS.AppBarOverlay">
        <item name="windowActionBar">true</item>
        <item name="android:ambientShadowAlpha">0.05</item>
        <item name="android:spotShadowAlpha">0.5</item>
    </style>


    <style name="Theme.SNKRS.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>